<%- include("header"); -%>
<div class="box" id="heading">
  <h1><i class="fas fa-clipboard-list"></i> <%=listTitle%>  </h1>
</div>

<div class="box">

  <% for(var i=0;i<newItem.length;i++){ %>
  <div class="item">
    <input type="checkbox">
    <p><%=newItem[i]%></p>
  </div>
  <% } %>
  <form class="item" action="\" method="post">

    <button type="submit" name="list" value="add">+</button>
    <input type="text" name="task" placeholder="Add task/item">
    <button type="submit" name="list" value="delete">-</button>

  </form>
</div>

<%- include('footer'); -%>
